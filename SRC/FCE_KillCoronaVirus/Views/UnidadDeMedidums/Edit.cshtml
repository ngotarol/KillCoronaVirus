@model FCE_KillCoronaVirus.Models.UnidadDeMedidum

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Unidad de medida</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CodUom" />
            <div class="form-group">
                <label asp-for="NomUom" class="control-label"></label>
                <input asp-for="NomUom" class="form-control" />
                <span asp-validation-for="NomUom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Uom" class="control-label"></label>
                <input asp-for="Uom" class="form-control" />
                <span asp-validation-for="Uom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary text-white m-4 p-1" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
