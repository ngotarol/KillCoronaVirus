@model FCE_KillCoronaVirus.Models.UnidadDeMedidum

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>Esta seguro que desea eliminar esta unidad de medida?</h3>
<div>
    <h4>Unidad de medida</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomUom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomUom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Uom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Uom)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CodUom" />
        <input type="submit" value="Borrar" class="btn btn-danger text-white m-4 p-1" /> |
        <a asp-action="Index">Volver al listado</a>
    </form>
</div>
