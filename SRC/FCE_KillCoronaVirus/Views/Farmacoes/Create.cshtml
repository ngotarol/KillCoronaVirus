@model FCE_KillCoronaVirus.Models.Farmaco

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>Farmaco</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomFar" class="control-label"></label>
                <input asp-for="NomFar" class="form-control" />
                <span asp-validation-for="NomFar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Concentracion" class="control-label"></label>
                <input asp-for="Concentracion" class="form-control" />
                <span asp-validation-for="Concentracion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodUom" class="control-label"></label>
                <select asp-for="CodUom" class ="form-control" asp-items="ViewBag.CodUom"></select>
            </div>
            <div class="form-group">
                <label asp-for="CodPresentacion" class="control-label"></label>
                <select asp-for="CodPresentacion" class ="form-control" asp-items="ViewBag.CodPresentacion"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary m-4 p-1 " />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
